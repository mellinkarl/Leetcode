"""
Name: Longest Consecutive Sequence (128)
Difficulty: Medium
Mastered: No

Time: O(n)
Space: O(n)
Notes: Set for O(1) checking if the number before another is in the set.
"""

from collections import Counter, heapq
from typing import List

class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        
        hash_set = set(nums)
        max_len = 0
        for num in nums:
            if num - 1 in hash_set:
                continue
            curr_len = 1
            while num + 1 in hash_set:
                curr_len += 1
                num += 1
            max_len = max(max_len, curr_len)

        return max_len
